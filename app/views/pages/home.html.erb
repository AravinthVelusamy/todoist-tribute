<!DOCTYPE html>
<html>
    <head>
        <title>Tudu</title>
        <%= csrf_meta_tags %>
        <meta property="apiUrl" content="<%= root_url %>" />
    </head>

    <body>
        <div id="vue-root">
            <div class="page-background">
                <div class="top-bar">
                    <div class="top-bar-inner">
                        <h1>TUDU</h1>
                    </div>
                </div>
                <div class="all-holder">
                    <div class="left-menu">
                        <div class="view-list-container">
                            <view-list
                                :inbox-project="$store.getters.inboxProject"
                                :inbox-project-task-count="$store.getters.inboxProjectTaskCount"
                                :selected-project="$store.state.activeProject">
                            </view-list>
                        </div>
                        <div class="tabs-container">
                            <div class="tab">
                                Projects
                            </div><div class="tab is-selected">
                                Labels
                            </div><div class="tab">
                                Filters
                            </div>
                        </div>
                        <div class="project-list-container">
                            <project-list
                                :projects="$store.getters.projectsWithoutInbox"
                                :selected-project="$store.state.activeProject"
                                :project-task-counts="$store.getters.projectTaskCounts">
                            </project-list>
                        </div>
                    </div><div class="content">
                        <div class="section-header">
                            <h2 v-text="$store.state.activeProject.name">
                            </h2>
                        </div>

                        <div>
                            <task-list-switcher
                                :tasks="$store.getters.tasksForActiveProject"
                                :project="$store.state.activeProject">
                            </task-list-switcher>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
        <%= javascript_pack_tag 'application' %>
    </body>
</html>
